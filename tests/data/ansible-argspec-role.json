{
  "inherit": {
    "default": true,
    "description": [
      "let the role inherits the privileges of the roles its is a member of"
    ],
    "type": "bool"
  },
  "name": {
    "required": true,
    "type": "str"
  },
  "password": {
    "description": [
      "role password"
    ],
    "no_log": true,
    "type": "str"
  },
  "pgpass": {
    "default": false,
    "description": [
      "add an entry in password file for this role"
    ],
    "type": "bool"
  },
  "state": {
    "choices": [
      "present",
      "absent"
    ],
    "default": "present"
  }
}